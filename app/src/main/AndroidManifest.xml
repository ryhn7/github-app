<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GithubApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.GithubApp.NoActionBar" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GithubApp.NoActionBar" />
    </application>

</manifest>